{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":assignee(viceice)",
    ":automergeDigest",
    "docker:enableMajor",
    "docker:pinDigests",
    ":dependencyDashboard"
  ],
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "semanticCommits": true,
  "separateMinorPatch": true,
  "timezone": "Europe/Berlin",
  "labels": ["deps"],
  "major": {
    "dependencyDashboardApproval": true
  },
  "digest": {
    "extends": ["schedule:daily"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"],
    "stabilityDays": 0,
    "dependencyDashboardApproval": true
  },
  "postUpdateOptions": ["yarnDedupeHighest"],
  "ignorePaths": ["**/node_modules/**"],
  "packageRules": [
    {
      "packageNames": ["renovate", "renovate/renovate"],
      "extends": [":automergeMinor"]
    },
    {
      "packageNames": ["node", "yarn", "pnpm", "rancher/cli"],
      "packagePatterns": ["^verdaccio"],
      "extends": [":automergePatch"]
    },
    {
      "packagePatterns": ["mcr.microsoft.com/dotnet/core"],
      "groupName": "dotnet core images"
    },
    {
      "packagePatterns": ["^verdaccio"],
      "groupName": "verdaccio packages"
    },
    {
      "managers": ["regex"],
      "pinDigests": false
    },
    {
      "packageNames": ["gitlab/gitlab-ce", "gitlab/gitlab-runner"],
      "extends": [":automergeMinor"],
      "dependencyDashboardApproval": false,
      "groupName": "gitlab docker images"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/|\\.)Dockerfile$", "(^|/)Dockerfile\\.[^/]*$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
